@using Havit.Blazor.Components.Web.Bootstrap;

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - NewProjectTemplate</title>
	@Html.Raw(HxSetup.RenderBootstrapCssReference())
    <link href="_content/Havit.Blazor.Components.Web.Bootstrap/defaults.css" rel="stylesheet" asp-append-version="true" />
    <link href="Havit.NewProjectTemplate.Web.Client.styles.css" rel="stylesheet" asp-append-version="true" /> <!-- CSS Isolation -->
    <link href="css/site.css" rel="stylesheet" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
				<a href="/" class="navbar-brand">NewProjectTemplate</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
							<a href="/" class="nav-link text-dark">Home</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; NewProjectTemplate
        </div>
    </footer>

	@Html.Raw(HxSetup.RenderBootstrapJavaScriptReference())
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>