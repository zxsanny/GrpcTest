@using Havit.NewProjectTemplate.Web.Client.Resources
@inject INavigationLocalizer NavigationLocalizer

<HxSidebar CssClass="sticky-top">
	<HeaderTemplate>
		<HxSidebarBrand BrandName="NewProjectTemplate" BrandNameShort="NP" />
	</HeaderTemplate>

	<ItemsTemplate>
		<HxSidebarItem Text="Dashboard" Href="@Routes.Home" Icon="@BootstrapIcon.Columns" Match="NavLinkMatch.All" />
		<HxSidebarItem Text="Section 1" Icon="@BootstrapIcon.Person">
			<HxSidebarItem Text="Section Item 1" Href="/one" />
			<HxSidebarItem Text="Section Item 2" Href="/two" />
			<HxSidebarItem Text="Section Item 3" Href="/three" />
			<HxSidebarItem Text="Section Item 4" Href="/four" />
		</HxSidebarItem>
		<HxSidebarItem Text="Section 2" Icon="@BootstrapIcon.Clock" />
		<HxSidebarItem Text="Section 3" Icon="@BootstrapIcon.Kanban" />
        <AuthorizeView Roles="@(nameof(RoleEntry.SystemAdministrator) + "," + nameof(RoleEntry.UserSettingsAdministrator))">
		    <HxSidebarItem Text="@NavigationLocalizer.Administration" Href="@Routes.Administration.Index" Icon="@BootstrapIcon.Gear" />
        </AuthorizeView>
		<HxSidebarItem Text="Development" Href="/development" Icon="@BootstrapIcon.FileCode" />
	</ItemsTemplate>

	<FooterTemplate>
		<LoginDisplay ShowOnlyInitials="@context.SidebarCollapsed" />
	</FooterTemplate>
</HxSidebar>
